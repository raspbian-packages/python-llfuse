 from pickle import PicklingError
+import sys
 
 def test_inquire_bits():
     assert 0 < llfuse.get_ino_t_bits() < 256
@@ -66,6 +67,9 @@ def test_entry_res():
     a.st_atime_ns = val*1e9
     assert a.st_atime_ns / 1e9 == val
 
